{{#if (eq this.searchMode "keyword")}}
  <SearchWrapper
    @model={{this.model}}
    @searchMode={{this.searchMode}}
    @searchParameters={{this.searchParameters}}
  >
    <:searchMode>
      <ComboBox
        class="instant-search-modes__input"
        @valueProperty="value"
        @content={{this.searchModes}}
        @value={{this.searchMode}}
        @onChange={{this.changeSearchMode}}
      />
    </:searchMode>
  </SearchWrapper>
